{% extends 'base.html.twig' %}

{% block title %}My Quiz - Register{% endblock %}

{% block body %}
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-transparent py-8 px-4 shadow sm:rounded-lg sm:px-10 border">
            {{ form_start(registrationForm, {'method': 'post', 'attr': {'class': 'space-y-4'}}) }}
                {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
                {% if formErrors|length %}
                    <div class="px-4 py-3 bg-red-600 text-gray-50 rounded-md">
                        <ul>
                            {% for error in formErrors %}
                                <li>{{ error.message }}.</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="text-red-500">{{ flashError }}</div>
                {% endfor %}

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-50">
                        Email address
                    </label>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'bg-transparent text-gray-50 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-50">
                        Password
                    </label>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-transparent text-gray-50 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
                    </div>
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded' }}) }}
                    <label for="agreeTerms" class="block text-sm font-medium text-gray-50 ml-2">
                        Do you agree?
                    </label>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-400 via-purple-600 to-red-600 hover:from-red-600 hover:via-purple-600 hover:to-blue-400 transition ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Register
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
