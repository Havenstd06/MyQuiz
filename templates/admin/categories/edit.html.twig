{% extends 'base.html.twig' %}

{% block title %}My Quiz - Admin Edit {{ categorie.id }}{% endblock %}

{% block body %}

<main class="max-w-7xl mx-auto pb-10 lg:py-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
        {% include 'admin/navbar.html.twig' %}

        <form action="" method="POST" class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
            <div class="shadow overflow-hidden sm:rounded-md mx-auto max-w-4xl">
                <div class="px-4 py-5 bg-white sm:p-6">
                    <div class="grid sm:grid-cols-6 gap-6">
                        <h2 class="col-span-6">
                            Category:
                        </h2>

                        <div class="col-span-6 sm:col-span-3">
                            <label for="name" class="block text-sm font-medium leading-5 text-gray-700">Name</label>
                            <input id="name" name="name" type="text" value="{{ categorie.name }}" class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                        </div>
                        <hr class="col-span-6">
                        <h2 class="col-span-6">
                            Questions:
                        </h2>

                        {% for question in categorie.getQuestions %}

                        <div class="col-span-6 sm:col-span-5">
                            <label for="question" class="block text-sm font-medium leading-5 text-gray-700">Question</label>
                            <input id="question" name="question-{{ question.id }}" type="text" value="{{ question.question }}" class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                        </div>

                        <div class="sm:col-span-1"></div>

                            {% set value = 1 %}
                            {% for reponse in question.reponses %}
                                <div class="col-span-6 sm:col-span-2">
                                    <label for="reponse" class="block text-sm font-medium leading-5 text-gray-700">
                                        Answer {{ value }}
                                        {% if value == 1 %}
                                            <span class="text-green-600">
                                                (Answer Expected)
                                            </span>
                                        {% endif%}
                                    </label>
                                    <input id="reponse" name="reponse-{{ reponse.id }}" type="text" value="{{ reponse.reponse }}" class="mt-1 form-input block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                                </div>

                                {% set value = value + 1 %}
                            {% endfor %}
                            <div class="sm:col-span-6"></div>
                        {% endfor %}
                    </div>
                </div>
                <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 flex justify-end items-center">
                    <button type="submit" class="py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 shadow-sm hover:bg-indigo-500 focus:outline-none focus:shadow-outline-blue active:bg-indigo-600 transition duration-150 ease-in-out">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>

{% endblock %}
