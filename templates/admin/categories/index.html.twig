{% extends 'base.html.twig' %}

{% block title %}My Quiz - Admin Categories{% endblock %}

{% block body %}

    <main class="max-w-7xl mx-auto pb-10 lg:py-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
            {% include 'admin/navbar.html.twig' %}

            <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
                <div class="flex items-center space-x-4 ml-4 md:ml-0 mb-4 md:mb-0">
                    <h3 class="text-2xl leading-6 font-medium text-gray-50">
                        Categories / Quiz
                    </h3>
                    <a href="{{ path('quiz.new') }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-gray-100 hover:text-text-gray-50 bg-indigo-500 hover:bg-indigo-600 transition duration-200 ease-out focus:outline-none focus:ring-2 focus:ring-storme-orange">
                        New
                    </a>
                </div>
                <div class="flex flex-col">
                    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            ID
                                        </th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Nb Questions
                                        </th>
                                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Name
                                        </th>
                                        <th scope="col" class="relative px-6 py-3">
                                            <span class="sr-only">Edit</span>
                                        </th>
                                        <th scope="col" class="relative px-6 py-3">
                                            <span class="sr-only">Delete</span>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for categorie in categories %}
                                        <tr class="bg-white">
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                {{ categorie.id }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                                {{ categorie.getQuestions | length }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                                {{ categorie.name }}
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <a href="{{ path('admin.categorie.edit', {'id' : categorie.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <a href="{{ path('admin.categorie.delete', {'id' : categorie.id}) }}" class="text-indigo-600 hover:text-indigo-900">Delete</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

{% endblock %}
